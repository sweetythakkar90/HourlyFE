<div class="modal fade" id="registerCompany" role="dialog">
    <div class="modal-dialog">
        <form action="#" method="POST" role="form">
            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Register a Company</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-sm-12">
                            <div class="row">
                                <div class="form-group col-lg-12">
                                    <label for="input1">Name</label>
                                    <input type="text" id="input1" class="form-control" name="contact_name">
                                </div>
                                <div class="form-group col-lg-12">
                                    <label for="input2">Address</label>
                                    <input type="text" id="input2" class="form-control" name="contact_name">
                                </div>
                                <div class="form-group col-lg-12">
                                    <label for="input3">Email Address</label>
                                    <input type="email" id="input3" class="form-control" name="contact_email">
                                </div>
                                <div class="form-group col-lg-12">
                                    <label for="input4">Phone Number</label>
                                    <input type="phone" id="input4" class="form-control" name="contact_phone">
                                </div>
                                <div class="clearfix"></div>
                                
                            </div>

                        </div>
                    </div>

                </div>
                <div class="modal-footer">
                    <button class="btn btn-primary" type="submit">Submit</button>
                    <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                </div>
            </div>
        </form>
    </div>
</div>